{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --include=dev && chmod +x node_modules/.bin/nest && npx nest build"
  },
  "deploy": {
    "startCommand": "npm run start:prod"
  },
  "nixpacksPlan": {
    "phases": {
      "setup": {
        "cacheDirectories": []
      },
      "install": {
        "cacheDirectories": []
      },
      "build": {
        "cacheDirectories": []
      }
    }
  }
}